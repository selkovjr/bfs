[
  {
    "settings": [ "master" ],
    "yui": {
      "dependencyCalculations": "precomputed+ondemand",
      "config": {
        "debug": "true",
        "logLevel": "info",
        "fetchCSS": true,
        "combine": false,
        "throwFail": true,
        "filter": "raw",
        "filters": {
          "mojito-client": "raw",
          "mojito-dispatcher": "raw",
          "datatasource": "debug",
          "datatasource-io": "debug",
          "datatable-core": "debug",
          "datatable-body": "debug",
          "datatable-table": "debug",
          "datatable-base": "debug",
          "datatable-datasource": "debug",
          "gallery-datatable-editable": "debug",
          "gallery-datatable-celleditor-inline": "debug",
          "gallery-datatable-paginator": "raw",
          "gallery-paginator-view": "raw"
        }
      }
    },
    "specs": {
      "loginframe": {
        "type": "HTMLFrameMojit",
        "config": {
          "deploy": true,
          "title": "Georgia Bird Virus Database: log in",
          "child": {
            "type": "Login"
          },
          "assets": {
            "top": {
              "css": [
                "/static/bfs/assets/common.css"
              ]
            }
          }
        }
      },
      "pageframe": {
        "type": "HTMLFrameMojit",
        "config": {
          "deploy": true,
          "title": "Georgia Bird Virus Database",
          "child": {
            "type": "PageLayout",
            "config": {
              "children": {
                "header": {
                  "type": "Header"
                },
                "body": {
                  "type": "Body",
                  "config": {
                    "children": {
                      "samples": {
                        "type":"Samples"
                      },
                      "sampleDetails": {
                        "type": "SampleDetails",
                        "config": {
                          "children": {
                            "location": {
                              "type":"Locations",
                              "propagateFailure": true
                            },
                            "diagnostics": {
                              "type":"Diagnostics",
                              "propagateFailure": true
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "footer": {
                  "type": "Footer"
                }
              }
            }
          },
          "assets": {
            "top": {
              "css": [
                "/static/bfs/assets/common.css"
              ],
              "js": [
                "/static/bfs/assets/dumper.js"
              ]
            }
          }
        }
      }
    }
  },
  {
    "settings": [ "runtime:client" ]
  },

  {
    "settings": [ "environment:development" ],
    "staticHandling": {
      "forceUpdate": true
    },
    "viewEngine": {
      "cacheTemplates": false
    }
  }
]
